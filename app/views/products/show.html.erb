<p id="notice"><%= notice %></p>
<div class="card">
  <div class="card-body">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>

    <p>
      <strong>Type:</strong>
      <%= @product.kind %>
    </p>

    <p>
      <strong>Model:</strong>
      <%= @product.model %>
    </p>

    <p>
      <strong>Brand:</strong>
      <%= @product.brand %>
    </p>

    <p>
      <strong>Year:</strong>
      <%= @product.year %>
    </p>

    <p>
      <strong>Ram:</strong>
      <%= @product.RAM %>
    </p>

    <p>
      <strong>External storage:</strong>
      <%= @product.external_storage %>
    </p>
    <%= link_to 'Back', products_path, class: "btn btn-secondary" %>
    <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-secondary" %> 
  </div>
</div>

